@{
    ViewBag.Title = "About";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>
<script src="~/Scripts/angd.js" type="text/javascript"></script>
<script src="~/Scripts/ang1.js" type="text/javascript"></script>

<div ng-app="product1" ng-controller="ProductController as product">
  <b>Product:</b>
    <select ng-model="product.pname">
      <option ng-repeat="c in product.pnames">{{c}}</option>
    </select>
   <div>
    Quantity: <input type="number" min="0" ng-model="product.quantity" required >
  </div>
  <div>
    Costs: <input type="number" min="0" ng-model="product.cost" required >
  </div>
  <div>
    total: {{product.total()}}
  </div>
   <div>
    disc: {{product.disc()}}
  </div>
  <div>
    <button class="btn" ng-click="product.pay()">Pay</button>
  </div>
</div>


<aside>
    <h3>Aside Title</h3>
    <p>
        Use this area to provide additional information.
    </p>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>
</aside>